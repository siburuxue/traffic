<extend name="Common/base" />
<block name="title">编辑角色</block>
<block name="main.html">
    <!-- 页面主体 -->
    <div class="container-fluid main">
        <!-- 页头 -->
        <div class="head-space"></div>
        <!-- 面板 -->
        <div class="panel panel-default">
            <!-- 面板标题 -->
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6"><span class="block-title">编辑角色</span></div>
                    <div class="col-xs-6 text-right">
                        <button type="button" class="btn btn-danger btn-sm js-close"><span class="glyphicon glyphicon-off"></span> 关闭</button>
                    </div>
                </div>
            </div>
            <!-- 面板内容 -->
            <div class="panel-body">
                <table class="table table-bordered table-condensed table-custom">
                    <tr>
                        <th width="20%">角色名称</th>
                        <td>
                            <input type="text" class="form-control input-sm post-gather" name="name" maxlength="50" value="{$info.name}">
                        </td>
                    </tr>
                    <tr>
                        <th>备注</th>
                        <td>
                            <input type="text" class="form-control input-sm post-gather" name="remark" maxlength="50" value="{$info.remark}">
                        </td>
                    </tr>
                    <tr>
                        <th>权限</th>
                        <td>
                            <volist name="powerCate" id="vo">
                                <p class="bg-success" style="padding:3px 20px;">{$vo.name}</p>
                                <div class="row checkbox">
                                    <volist name="vo._child" id="co">
                                        <div class="col-xs-4">
                                            <label>
                                                <input type="checkbox" name="power" value="{$co.id}" <in name="co.id" value="$thePower">checked="checked"</in>>&nbsp;{$co.title}</label>
                                        </div>
                                    </volist>
                                </div>
                                <hr>
                            </volist>
                        </td>
                    </tr>
                </table>
                <button type="button" class="btn btn-primary" id="submit"><span class="glyphicon glyphicon-saved"></span> 提交</button>
                <button type="button" class="btn btn-warning" id="reset"><span class="glyphicon glyphicon-repeat"></span> 重置</button>
            </div>
        </div>
    </div>
    <input type="hidden" name="id" value="{$info.id}" class="post-gather">
</block>
<block name="head.ext">
    <script type="text/javascript">
    // 定义URL地址
    url.update = "{:U('update')}";
    </script>
</block>
<block name="foot.ext">
    <import file="js.Role.edit?" basepath="{$Think.SRC_MODULE_URL}" />
</block>
