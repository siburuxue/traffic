<extend name="Common/base" />
<block name="title">调解</block>
<block name="main.html">
    <!-- 页面主体 -->
    <div class="container-fluid main">
        <!-- 页头 -->
        <div class="head-space"></div>
        <!-- 列表面板 -->
        <div class="panel panel-default">
            <!-- 面板头 -->
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6"><span class="block-title">调解</span></div>
                    <div class="col-xs-6 text-right">
                        <button type="button" class="btn btn-danger btn-sm js-close"><span class="glyphicon glyphicon-off"></span> 关闭</button>
                    </div>
                </div>
            </div>

            <!-- 面板主体 -->
            <div class="panel-body">
                <!-- 申请 -->
                <include file="CaseMediateHandleInfo/index/apply" />
                <h3 class="row">
                    <div class="col-xs-6"><span class="block-title">调解申请列表</span></div>
                </h3>
                <!-- 表格 -->
                <div class="table-responsive" id="table-content"></div>
                <!-- 分页 -->
                <!--<div id="apply-div">-->
                    <!--<include file="Inc/page" />-->
                <!--</div>-->
                <h3 class="row">
                    <div class="col-xs-6"><span class="block-title">调解列表</span></div>
                </h3>
                <!-- 表格 -->
                <div class="table-responsive" id="table-content1"></div>
                <!-- 分页 -->
                <!--<div id="mediate-div">-->
                    <!--<include file="Inc/page" />-->
                <!--</div>-->
            </div>
        </div>
        <input type="hidden" id="case_id" name="case_id" value="{$case['id']}" class="post-gather">
        <!-- 表格 结束 -->
    </div>
    <!-- 页面主体 结束 -->
</block>
<block name="head.ext">
    <script type="text/javascript">
        url.applyTable = "{:U('applyTable')}";
        url.mediateTable = "{:U('mediateTable')}";
        url.addMediateApply = "{:U('addMediateApply')}";
        url.mediate = "{:U('mediate')}";
        url.delete = "{:U('delete')}";
    </script>
</block>
<block name="foot.ext">
    <import file="js.CaseMediateHandleInfo.index?" basepath="{$Think.SRC_MODULE_URL}" />
</block>
