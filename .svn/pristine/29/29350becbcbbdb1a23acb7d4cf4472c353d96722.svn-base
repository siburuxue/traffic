<extend name="Common/base" />
<block name="title">编辑可进行检验鉴定项目</block>
<block name="main.html">
    <!-- 页面主体 -->
    <div class="container-fluid main">
        <!-- 页头 -->
        <div class="head-space"></div>
        <!-- 基础信息 -->
        <div class="panel panel-default">
            <!-- 面板标题 -->
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6"><span class="block-title">编辑可进行检验鉴定项目</span></div>
                    <div class="col-xs-6 text-right">
                        <button type="button" class="btn btn-danger btn-sm js-close"><span class="glyphicon glyphicon-off"></span> 关闭</button>
                    </div>
                </div>
            </div>
            <!-- 面板内容 -->
            <div class="panel-body">
                <table class="table table-bordered table-condensed table-custom">
                    <tbody>
                    <tr>
                        <th width="15%">父分类</th>
                        <td width="35%">
                            <select class="form-control input-sm" disabled>
                                <foreach name="level" item="vo" key="k">
                                    <if condition="$k eq $info['checkup_org_obj']">
                                        <option value="{$key}" selected>{$vo}</option>
                                    <else/>
                                        <option value="{$key}" >{$vo}</option>
                                    </if>
                                </foreach>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th width="15%"><span class="text-danger">*</span> 名称</th>
                        <td>
                            <input type="text" class="form-control input-sm post-gather" name="name" maxlength="255" value="{$info.name}">
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- 按钮 -->
        <input type="hidden" name="id" class="post-gather" value="{$info.id}">
        <input type="hidden" name="checkup_org_obj" class="post-gather" value="{$info.checkup_org_obj}">
        <button type="button" class="btn btn-primary" id="submit"><span class="glyphicon glyphicon-saved"></span> 保存</button>
        <button type="button" class="btn btn-warning" id="reset"><span class="glyphicon glyphicon-repeat"></span> 重置</button>
    </div>
</block>
<block name="head.ext">
    <script type="text/javascript">
        // 定义URL地址
        url.update = "{:U('update')}";
    </script>
</block>
<block name="foot.ext">

    <import file="js.CheckupOrgItem.edit?" basepath="{$Think.SRC_MODULE_URL}" />
</block>
