<h3 class="row">
    <div class="col-xs-6"><span class="block-title">案件信息</span></div>
</h3>
<table class="table table-bordered table-condensed table-custom">
    <tbody>
        <tr>
            <th width="15%">事故时间</th>
            <td width="35%"><input type="text" class="form-control input-sm" maxlength="255" disabled value="{$case.accident_time|date='Y-m-d H:i',###}"></td>
            <th width="15%">事故地点</th>
            <td><input type="text" class="form-control input-sm" maxlength="255" disabled value="{$case.accident_place}"></td>
        </tr>
    </tbody>
</table>
<h3 class="row">
    <div class="col-xs-6"><span class="block-title">当事人信息</span></div>
</h3>
<table class="table table-striped table-bordered table-hover table-condensed table-sheet" id="table1">
    <thead>
        <th>序号</th>
        <th>姓名</th>
        <th>身份证件号</th>
        <th>车辆牌号</th>
        <th>车型</th>
        <th>联系电话</th>
        <th>保险公司</th>
        <th>保单号:交强</th>
        <th>保单号:商业</th>
        <th>报案号</th>
    </thead>
    <tbody>
        <volist name="list" id="vo">
            <tr>
                <td>{$i}</td>
                <td>{$vo['name']}</td>
                <td>{$vo['idno']|default='-'}</td>
                <td>{$vo['car_no']|default='-'}</td>
                <td>{$vo['grade_type']|default='-'}</td>
                <td>{$vo['tel']|default='-'}</td>
                <td><input type="text" class="form-control input-sm" name="insurance_company" value="{$vo.insurance_company}"> </td>
                <td><input type="text" class="form-control input-sm" name="policy_number1" value="{$vo.policy_number1}"> </td>
                <td><input type="text" class="form-control input-sm" name="policy_number2" value="{$vo.policy_number2}"> </td>
                <td><input type="text" class="form-control input-sm" name="report_number" value="{$vo.report_number}"></td>
                <td style="display: none">
					<input type="hidden" name="client_id" value="{$vo.client_id}">
					<input type="hidden" name="id" value="{$vo.id}">
					<input type="hidden" name="name" value="{$vo.name}">
				</td>
            </tr>
        </volist>
    </tbody>
</table>
<h3 class="row">
    <div class="col-xs-6"><span class="block-title">交通事故信息</span></div>
</h3>
<table class="table table-bordered table-condensed table-custom" style="margin-bottom: 0" id="table2">
    <thead>
        <tr>
            <th width="10%" style="text-align: center">当事人</th>
            <th width="40%" style="text-align: center">碰撞部位</th>
            <th width="40%" style="text-align: center">事故成因</th>
            <th width="10%" style="text-align: center">责任</th>
        </tr>
    </thead>
    <tbody>
        <volist name="list" id="vo">
            <tr>
                <th>{$vo.name}</th>
                <td>
                    <table width="100%">
                        <tr>
                            <td width="30%"><label><input type="checkbox" name="headstock" <if condition="$vo['headstock'] eq 1">checked</if> >车头</label></td>
                            <td width="30%"><label><input type="checkbox" name="right_anterior_horn" <if condition="$vo['right_anterior_horn'] eq 1">checked</if> >右前角</label></td>
                            <td width="30%"><label><input type="checkbox" name="left_anterior_horn" <if condition="$vo['left_anterior_horn'] eq 1">checked</if> >左前角</label></td>
                        </tr>
                        <tr>
                            <td><label><input type="checkbox" name="tail_stock" <if condition="$vo['tail_stock'] eq 1">checked</if> >车尾</label></td>
                            <td><label><input type="checkbox" name="right_rear_corner" <if condition="$vo['right_rear_corner'] eq 1">checked</if> >右后角</label></td>
                            <td><label><input type="checkbox" name="left_rear_corner" <if condition="$vo['left_rear_corner'] eq 1">checked</if> >左后角</label></td>
                        </tr>
                        <tr>
                            <td><label><input type="checkbox" name="left_side" <if condition="$vo['left_side'] eq 1">checked</if> >车身左侧</label></td>
                            <td><label><input type="checkbox" name="right_side" <if condition="$vo['right_side'] eq 1">checked</if> >车身右侧</label></td>
                            <td></td>
                        </tr>
                    </table>
                </td>
                <td>
                    <table width="100%">
                        <tr>
                            <td width="30%"><label><input type="checkbox" name="rear_end" <if condition="$vo['rear_end'] eq 1">checked</if> >追尾的</label></td>
                            <td width="30%"><label><input type="checkbox" name="recessive" <if condition="$vo['recessive'] eq 1">checked</if> >逆行的</label></td>
                            <td width="30%"><label><input type="checkbox" name="backing_up" <if condition="$vo['backing_up'] eq 1">checked</if> >倒车的</label></td>
                        </tr>
                        <tr>
                            <td><label><input type="checkbox"  name="sliding" <if condition="$vo['sliding'] eq 1">checked</if> >溜车的</label></td>
                            <td><label><input type="checkbox"  name="open_close_door" <if condition="$vo['open_close_door'] eq 1">checked</if> >开关车门的</label></td>
                            <td><label><input type="checkbox"  name="violate_traffic_signal" <if condition="$vo['violate_traffic_signal'] eq 1">checked</if> >违反交通信号的</label></td>
                        </tr>
                        <tr>
                            <td><label><input type="checkbox" name="according_stipulations" <if condition="$vo['according_stipulations'] eq 1">checked</if> >未按规定让行的</label></td>
                            <td colspan="2">其他事故成因：<input class="form-control input-sm"  name="others" style="display: inline-block;width:65%" value="{$vo.others}"></td>
                        </tr>
                    </table>
                </td>
                <td>
                    <table width="100%">
                        <tr>
                            <td><label><input type="checkbox"  name="all_responsibility" <if condition="$vo['all_responsibility'] eq 1">checked</if> >全部责任</label></td>
                        </tr>
                        <tr>
                            <td><label><input type="checkbox" name="equal_responsibility" <if condition="$vo['equal_responsibility'] eq 1">checked</if> >同等责任</label></td>
                        </tr>
                        <tr>
                            <td><label><input type="checkbox" name="no_responsibility" <if condition="$vo['no_responsibility'] eq 1">checked</if> >无责任</label></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </volist>
    </tbody>
</table>