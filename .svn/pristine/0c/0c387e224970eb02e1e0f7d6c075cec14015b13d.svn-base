<extend name="Common/base" />
<block name="title">报警记录</block>
<block name="main.html">
    <!-- 页面主体 -->
    <div class="container-fluid main">
        <!-- 页头 -->
        <div class="head-space"></div>
        <!-- 未关联报警信息 -->
        <div class="panel panel-default">
            <!-- 面板头 -->
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6"><span class="block-title">报警信息查询</span></div>
                    <div class="col-xs-6 text-right">
                        <button type="button" class="btn btn-danger btn-sm js-close"><span class="glyphicon glyphicon-off"></span> 关闭</button>
                    </div>
                </div>
            </div>
            <!-- 面板主体 -->
            <div class="panel-body" id="search-box">
                <!-- 搜索 -->
                <include file="CaseAlarmHandle/index/search" />
                <!-- 表格 -->
                <div id="search-table-content"></div>
                <!-- 分页 -->
                <include file="Inc/page" />
                <!-- 按钮 -->
                <div style="margin-top:20px;">
                    <button type="button" class="btn btn-primary" id="link-submit"><span class="glyphicon glyphicon-link"></span> 关联</button>
                </div>
            </div>
        </div>
        <!-- 已关联报警信息 -->
        <div class="panel panel-default">
            <!-- 面板头 -->
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6"><span class="block-title">已关联报警信息</span></div>
                    <div class="col-xs-6 text-right"></div>
                </div>
            </div>
            <!-- 面板主体 -->
            <div class="panel-body" id="linked-box">
                <!-- 表格 -->
                <div id="linked-table-content"></div>
                <!-- 分页 -->
                <include file="Inc/page" />
                <!-- 按钮 -->
                <div style="margin-top:20px;">
                    <button type="button" class="btn btn-danger" id="unlink-submit"><span class="glyphicon glyphicon-scissors"></span> 取消关联</button>
                </div>
            </div>
        </div>
    </div>
    <!-- 页面主体 结束 -->
    <input type="hidden" name="case_id" value="{$case.id}">
</block>
<block name="head.ext">
    <script type="text/javascript">
    // 定义URL地址
    url.searchTable = "{:U('searchTable')}";
    url.linkedTable = "{:U('linkedTable')}";
    url.link = "{:U('link')}";
    url.unlink = "{:U('unlink')}";
    </script>
</block>
<block name="foot.ext">

    <import file="js.CaseAlarmHandle.index?" basepath="{$Think.SRC_MODULE_URL}" />
</block>
