<table class="table table-striped table-bordered table-hover table-condensed table-sheet" id="table">
    <thead>
    <tr>
        <th>文件夹名</th>
        <th>文件数</th>
        <th colspan="4">操作</th>
    </tr>
    </thead>
    <tbody>
        <volist name="list" id="vo">
            <tr>
                <td style="text-align: left">{$vo._prefix}{$vo.title}</td>
                <td>{$vo.count}</td>
                <td width="60"><a href="{:U('viewFile?id='.$vo['id'])}" class="btn btn-info btn-sm js-open js-end-refresh view">查看</a></td>
                <td width="60"><a href="{:U('editFolder?id='.$vo['id'])}" class="btn btn-info btn-sm js-open js-end-refresh edit">编辑</a></td>
                <td width="60"><a href="javascript:;" class="btn btn-warning btn-sm del">删除</a></td>
                <td width="90">
                    <if condition="$vo['level'] neq 0">
                        <a href="javascript:;" class="btn btn-info btn-sm" disabled="">查看全部</a>
                    <else/>
                        <a href="{:U('viewAll?id='.$vo['id'])}" class="btn btn-info btn-sm js-open view-all">查看全部</a>
                    </if>
                </td>
                <td style="display: none"><input type="hidden" value="{$vo.id}"></td>
            </tr>
        </volist>
    </tbody>
</table>
