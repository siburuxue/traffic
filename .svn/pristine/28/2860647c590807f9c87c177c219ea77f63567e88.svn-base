@CHARSET "UTF-8 ";
html {
    overflow-y: hidden;
    overflow-x: hidden;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%
}

body {
    background: #FFF;
    font-family: "Microsoft YaHei", verdana, "\5B8B\4F53";
    font-size: 14px;
    color: #000;
    text-align: left;
    word-break: break-all;
    word-wrap: break-word;
    display: block;
    zoom: 1;
    overflow: hidden;
}

body, div, p, h1, h2, h3, h4, h5, h6, dl, dt, dd, ul, ol, li, form, input, textarea, button, pre, img {
    margin: 0;
    padding: 0;
}

dl, dt, dd, ul, ol, li {
    list-style: none outside none;
}

img, a {
    border: 0;
}

img {
    vertical-align: middle;
}

a {
    font-size: 100%;
    color: #000;
    text-decoration: none;
}

a:hover {
    color: #000;
    text-decoration: underline;
}

table {
    margin: 0 auto;
    border: 0;
    padding: 0;
    font-size: 100%;
    border-collapse: collapse;
    border-spacing: 0;
}

input, textarea, select {
    font-size: 100%;
    font-family: "Microsoft YaHei", verdana, "\5B8B\4F53";
    color: #000;
    outline: 0;
    resize: none;
}


/*******************************************************************************************/

.topbar {
    position: relative;
    overflow: hidden;
    height: 90px;
    background: #337AB7 url(../images/logo.jpg);
    color: #FFF;
}

.topbar a {
    color: #FFF;
    text-decoration: none;
}

.wrap {
    position: relative;
    overflow: hidden;
    background: #FFF;
}

.side {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 220px;
    background: #047BBF;
}

.main {
    height: 100%;
    margin: 0 0 0 220px;
    background: #E8F5FC;
}


/*************************************************************************************************/

.logo {
    float: left;
    height: 40px;
    line-height: 40px;
    padding: 0 20px;
    font-size: 16px;
}

.tool {
    position: absolute;
    top: 20px;
    right: 0px;
    width: 270px;
    height: 60px;
    display: block;
    overflow: hidden;
}

.tool .avatar {
    position: absolute;
    top: 0;
    left: 0;
    background: url(../images/face.png) no-repeat;
    width: 67px;
    height: 58px;
}

.tool .user-name {
    display: block;
    position: absolute;
    top: 8px;
    left: 69px;
    font-size: 16px;
    color: #FFF;
    width: 200px;
}

.tool .toolmenu {
    display: block;
    position: absolute;
    left: 69px;
    top: 30px;
    color: #333;
    font-size: 12px;
}

.tool .toolmenu a{
    color: #333;
}
/*************************************************************************************************/

#mainframe {
    display: block;
    width: 100%;
    height: 100%;
}

#sideframe {
    display: block;
    width: 100%;
    height: 100%;
}


/*************************************************************************************************/

.handle {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 15px;
    background: #047BBF;
    z-index: 99;
    display: none;
}

.handle .triangle {
    position: absolute;
    top: 50%;
    right: 0px;
    overflow: hidden;
    zoom: 1;
    width: 0;
    height: 0;
    border-width: 5px;
    border-style: dashed dashed dashed solid;
    border-color: transparent transparent transparent #FFF;
    z-index: 99;
}
