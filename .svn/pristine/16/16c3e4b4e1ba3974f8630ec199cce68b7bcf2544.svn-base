<extend name="Common/base" />
<block name="title">修改使用状态</block>
<block name="main.html">
    <!-- 页面主体 -->
    <div class="container-fluid main">
        <!-- 页头 -->
        <div class="head-space"></div>
        <!-- 面板 -->
        <div class="panel panel-default form-inline">
            <!-- 面板标题 -->
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6"><span class="block-title">修改使用状态</span></div>
                    <div class="col-xs-6 text-right">
                        <button type="button" class="btn btn-danger btn-sm js-close"><span class="glyphicon glyphicon-off"></span> 关闭</button>
                    </div>
                </div>
            </div>
            <!-- 面板内容 -->
            <div class="panel-body">
                <table class="table table-bordered table-condensed table-custom">
                    <tr>
                        <th width="20%">当前状态</th>
                        <td>
                            <eq name="info.is_used" value="0">
                                <input type="text" class="form-control input-sm " value="未使用" readOnly="readOnly">
                            </eq>
                            <eq name="info.is_used" value="1">
                                <input type="text" class="form-control input-sm " value="已使用" readOnly="readOnly">
                            </eq>
                        </td>
                    </tr>
                    <tr>
                        <th width="20%">状态变更为</th>
                        <td>
                            <select name="status" class="form-control input-sm post-gather" style="width:600px;">
                                <option value="">请选择</option>
                                <option value="0">未使用</option>
                                <option value="1">已使用</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>修改原因</th>
                        <td>
                            <textarea class="form-control post-gather " name="reason" maxlength="1000" style="width:600px;height:200px;"></textarea>
                        </td>
                    </tr>
                </table>
                <input type="hidden" class="form-control input-sm post-gather" name="pre_status" value="{$info.is_used}" >
                <input type="hidden" class="form-control input-sm post-gather" name="bloodtube_cate_id" value="{$info.bloodtube_cate_id}" >
                <input type="hidden" class="form-control input-sm post-gather" name="user_id" value="{$my.id}" >
               
                <button type="button" class="btn btn-primary" id="submit"><span class="glyphicon glyphicon-saved"></span> 提交</button>
                <button type="button" class="btn btn-warning" id="reset"><span class="glyphicon glyphicon-repeat"></span> 重置</button>
            </div>
        </div>
    </div>
</block>
<block name="head.ext">
    <script type="text/javascript">
    // 定义URL地址
    url.update = "{:U('usedUpdate')}";
    </script>
</block>
<block name="foot.ext">
    <import file="js.BloodtubeCate.used?" basepath="{$Think.SRC_MODULE_URL}" />
</block>
