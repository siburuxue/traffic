body {
    background-color: #047BBF;
    font-family: "Microsoft YaHei", verdana, "\5B8B\4F53";
    overflow: auto;
    scrollbar-face-color: #035686;
    scrollbar-shadow-color: #035686;
    scrollbar-highlight-color: #035686;
    scrollbar-3dlight-color: #035686;
    scrollbar-darkshadow-color: #035686;
    scrollbar-track-color: #0068a3;
    scrollbar-arrow-color: #FFF;
}

body::-webkit-scrollbar {
    width: 6px;
    height: 6px;
}

body::-webkit-scrollbar-button {
    width: 0;
    height: 0;
    display: none;
}

body::-webkit-scrollbar-track {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0);
}

body::-webkit-scrollbar-thumb {
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    -webkit-box-shadow: inset 1px 1px 0 rgba(0, 0, 0, 0.1);
}

body::-webkit-scrollbar-thumb:hover {
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 10px;
    -webkit-box-shadow: inset 1px 1px 0 rgba(0, 0, 0, 0.1);
}

body::-webkit-scrollbar-corner {
    background-color: transparent;
}

#menu {
    margin-top: 15px;
}

#menu .panel-default {
    border-color: #024A73;
    border-radius: 0;
}

#menu .panel-default>.panel-heading {
    border-color: #47A4D3;
    border-radius: 0;
    background: #3FA6DD;
    color: #FFF;
    cursor: pointer;
}

#menu .list-group-item {
    background: #DDF3FF;
    border-color: #C6DEEC;
    border-radius: 0;
    color: #021F30;
    blr: expression(this.onFocus=this.blur());
    outline: none;
}

#menu .list-group-item:focus {
    blr: expression(this.onFocus=this.blur());
    outline: none;
    -moz-outline-style: none;
}

#menu .list-group-item:hover {
    background-color: #B7E5FF;
}

#menu .list-group-item.active, #menu .list-group-item.active:focus, #menu .list-group-item.active:hover {
    background-color: #035686;
    color: #FFF;
}
